{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": false,
    "noEmit": false,
    "outDir": "./dist",
    "baseUrl": "..",
    "types": ["node"],
    "paths": {
      "@shared/*": ["shared/*"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
